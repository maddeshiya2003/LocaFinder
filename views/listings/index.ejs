<% layout("/layouts/boilerPlate") %>

<body>
    <div id="filters" class="mt-1">
        <a href="">
            <div class="filter">
                <div><i class="fa-solid fa-fire"></i></div>
                <div><p>Trending</p></div>
            </div> 
        </a>

        <a href="">
            <div class="filter">
                <div><i class="fa-solid fa-bed"></i></div>
                <div><p>Room</p></div>
            </div>
        </a>
        
        <a href="">
            <div class="filter">
                <div><i class="fa-solid fa-mountain-sun"></i></div>
                <div><p>Iconic Cities</p></div>
            </div> 
        </a>

        <a href="">
            <div class="filter">
                <div><i class="fa-solid fa-chess-rook"></i></div>
                <div><p>Castels</p></div>
            </div> 
        </a>

        <a href="">
            <div class="filter">
                <div><i class="fa-solid fa-person-swimming"></i></div>
                <div><p>Amazing Pools</p></div>
            </div>
        </a>

        <a href="">
            <div class="filter">
                <div><i class="fa-solid fa-mountain"></i></div>
                <div><p>Mountain</p></div>
            </div>
        </a>
       
        <a href="">
            <div class="filter">
                <div><i class="fa-solid fa-campground"></i></div>
                <div><p>Camping</p></div>
            </div>
        </a>

        <a href="">
            <div class="filter">
                <div><i class="fa-solid fa-tractor"></i></div>
                <div><p>Farms</p></div>
            </div>
        </a>

        <a href="">
            <div class="filter">
                <div><i class="fa-regular fa-snowflake"></i></div>
                <div><p>Arctic</p></div>
            </div>
        </a>

        <div class="tax-toggle">
            <div class="form-check form-switch">
                <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
                <label class="form-check-label" for="flexSwitchCheckDefault">Display Total After Taxes</label>
            </div>
        </div>
        
    </div>

    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
        <% for(let listing of allListings){ %>
            <a href="/listings/<%= listing._id %>" class="listing-link">
                <div class="card col listing-card" >
                    <img src="<%= listing.image.url %>" class="card-img-top show-img-index" alt="Listing item">
                    <div class="card-body">
                        <p class="card-text">
                            <b> <%= listing.title %> </b> <br>
                            &#8377 <%= listing.price.toLocaleString("en-IN") %>/Night &nbsp;
                             <i class="tax-info"><b>+18% GST</b></i>
                        </p>
                    </div>
                </div>
            </a>

        <% } %>
    </div>
</body>
