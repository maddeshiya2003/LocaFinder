<% layout("/layouts/boilerPlate") %>
<div class="row mt-3">
    <div class="rounded border border-dark col-8 offset-2">
        <form class="needs-validation m-3" action="/listings" method="post" novalidate enctype="multipart/form-data">
            <h3>Add New One... </h3>
            <div class="mb-3">
                <label for="title" class="form-label">Title : </label>
                <!-- // let{title,description,price,location,country} = req.body; -->
                <input type="text" name="listing[title]" placeholder="Enter a catchy title" class="form-control" required>
                <div class="valid-feedback">Title Soo Good</div>
            </div>

            <div class="mb-3">
                <label for="description" class="form-label">Description : </label>
                <textarea name="listing[description]" class="form-control" required></textarea>
                <div class="valid-feedback">Title Soo Good</div>
            </div>

            <div class="mb-3 form-floating">
                <select name="listing[category]" class="form-select" id="floatingSelect">
                    <option value="Trending">Trending</option>
                    <option value="Room">Room</option>
                    <option value="IconicCities">Iconic Cities</option>
                    <option value="Castels">Castels</option>
                    <option value="AmazingPools">Amazing Pools</option>
                    <option value="Mountain">Mountain</option>
                    <option value="Camping">Camping</option>
                    <option value="Farms">Farms</option>
                    <option value="Arctic">Arctic</option>
                </select>
                <label for="floatingSelect">Select Your Prefrencee</label>
            </div>

            <div class="mb-3">
                <label for="image" class="form-label">Upload Listing Image : </label>
                <input type="file" name="listing[image]" class="form-control" required>
            </div>

            <div class="row ">
                <div class="mb-3 col-md-4">
                    <label for="price" class="form-label">Approximately Price : </label>
                    <input type="" name="listing[price]" placeholder="1999" class="form-control" required>
                    <div class="invalid-feedback">Enter price</div>
                    <div class="valid-feedback">Good price</div>
                </div>
                
                <div class="mb-3 col-md-8">
                    <label for="country" class="form-label">Country : </label>
                    <input type="text" name="listing[country]" placeholder="India" class="form-control" required>
                </div>
            </div>

            <div class="mb-3">
                <label for="location" class="form-label">Location : </label>
                <input type="text" name="listing[location]" placeholder="B.K.T,  Lucknow" class="form-control" required>
            </div>

            <button class="btn btn-dark mb-3 add-btn">Add</button>
            
        </form>
    </div>
</div>
</body>